@model AutoPartsPOS.Models.Customer

<h2 style="font-weight:700;margin-bottom:25px;">إضافة عميل</h2>

<div class="form-container">
<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>اسم العميل</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="validation-message"></span>
    </div>

    <div class="form-group">
        <label>رقم الهاتف</label>
        <input asp-for="Phone" class="form-control"/>
    </div>

    <div class="form-group">
        <label>الرصيد الافتتاحي</label>
        <input asp-for="Balance" class="form-control" type="number" step="0.01"/>
    </div>

    <button class="btn-submit">
        <i class="fas fa-save"></i> حفظ
    </button>
</form>
</div>
