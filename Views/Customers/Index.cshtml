@model List<AutoPartsPOS.Models.Customer>
@{
    ViewData["Title"] = "العملاء";
}

<h2 style="font-weight:700;margin-bottom:25px;">إدارة العملاء</h2>

<a class="btn-create-new" asp-action="Create">
    <i class="fas fa-plus-circle"></i> إضافة عميل جديد
</a>

<div class="data-table-container">
<table class="data-table">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الهاتف</th>
            <th>الرصيد</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Phone</td>
            <td>@item.Balance.ToString("N2")</td>
            <td class="action-links">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> تعديل</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
