@model AutoPartsPOS.Models.SalesInvoice
@{
    ViewData["Title"] = "مردود البيع";
    var items = Model.SalesInvoiceItems.ToList(); // تحويل الـ ICollection لقائمة
}

<h3>فاتورة بيع رقم #@Model.Id</h3>
<form method="post" asp-action="SalesConfirm" asp-controller="Returns">
    <input type="hidden" name="invoiceId" value="@Model.Id" />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>الصنف</th>
                <th>الكمية الأصلية</th>
                <th>كمية المردود</th>
                <th>السعر</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < items.Count; i++)
            {
                <tr>
                    <td>@items[i].Product.Name</td>
                    <td>@items[i].Quantity</td>
                    <td>
                        <input type="number" name="quantities" min="0" max="@items[i].Quantity" class="form-control" value="0" />
                    </td>
                    <td>@items[i].Price.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">تأكيد مردود البيع</button>
</form>
