@model AutoPartsPOS.Models.Product

<h2>تأكيد حذف المنتج</h2>

<div class="form-container">
    <p>هل أنت متأكد من حذف المنتج <strong>@Model.Name</strong>؟</p>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-submit" style="background:#ef4444;">
            حذف
        </button>
        <a asp-action="Index" class="btn-create-new">إلغاء</a>
    </form>
</div>
