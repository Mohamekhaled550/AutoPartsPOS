@model List<AutoPartsPOS.Models.Product>
@{
    ViewData["Title"] = "المنتجات";
}

<h2 style="font-weight: 700; margin-bottom: 25px;">إدارة المنتجات</h2>

<a class="btn-create-new" asp-action="Create">
    <i class="fas fa-plus-circle"></i> إضافة منتج جديد
</a>

<div class="data-table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>النوع</th>
                <th>سعر الشراء</th>
                <th>سعر البيع</th>
                <th>الكمية</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@item.BuyPrice.ToString("N2")</td> <td>@item.SellPrice.ToString("N2")</td> <td>@item.Quantity</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> تعديل</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color:#ef4444;"><i class="fas fa-trash-alt"></i> حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>