@model AutoPartsPOS.Models.Maintenances.Maintenance

@{
    ViewData["Title"] = "تفاصيل عملية الصيانة";
    var totalParts = Model.Items.Sum(i => i.Price * i.Quantity);
}

<style>
    /* تنسيقات الشاشة الأساسية */
   
    .card {
        border-radius: 20px !important;
        border: none !important;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
    }

    /* تكبير وتوضيح قسم البيانات */
    .info-box {
        background: #f8fafc;
        border-radius: 12px;
        padding: 20px;
        border: 1px solid #e2e8f0;
        height: 100%;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        font-size: 1.1rem;
    }

    .info-label {
        font-weight: 800;
        color: #64748b;
        min-width: 110px;
        margin-left: 10px;
    }

    .info-value {
        font-weight: 700;
        color: #1e293b;
        font-size: 1.2rem;
    }

    .status-large {
        font-size: 1.3rem !important;
        padding: 10px 25px !important;
        border-radius: 50px !important;
        display: inline-block;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    /* الجدول */
    .table thead th {
        background-color: #1e3a8a !important;
        color: white !important;
        font-size: 1rem;
        padding: 15px !important;
    }

    .table tbody td {
        padding: 15px !important;
        font-size: 1.1rem;
        vertical-align: middle !important;
    }

    .service-row {
        background-color: #fffde7 !important;
        font-weight: bold;
    }

    /* قسم الأمانات المفقود */
    .hold-items-box {
        background-color: #fff8e1;
        border: 2px dashed #ffc107;
        border-radius: 15px;
        padding: 15px;
        margin-top: 20px;
    }

    .hold-item-entry {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    /* قسم الإجمالي */
    .total-card {
        background: #1e3a8a;
        color: white;
        padding: 25px;
        border-radius: 15px;
        text-align: center;
    }

    .total-card h2 {
        font-size: 2.5rem;
        font-weight: 900;
        margin-top: 10px;
    }
@@media print {
        /* إخفاء الناف بار والفوتر وأي عناصر تحكم نهائياً */
        nav, .navbar, header, footer, .d-print-none, .btn, .sidebar {
            display: none !important;
            height: 0 !important;
            visibility: hidden !important;
        }
</style>

<div class="container mt-4 mb-5">
    <div class="d-print-none mb-3 text-left">
        <button onclick="window.print()" class="btn btn-dark btn-lg shadow-sm">
            <i class="fa fa-print"></i> طباعة الفاتورة الفورية
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">العودة</a>
    </div>

    <div class="card shadow border-0 text-right">
        <div class="card-body p-5">
            
            <div class="row mb-5 align-items-center">
                <div class="col-6">
                    <h1 class="text-primary font-weight-bold mb-0">مركز صيانة أوتو بارتس</h1>
                    <h5 class="text-muted">نظام إدارة الفواتير الذكي</h5>
                </div>
                <div class="col-6 text-left">
                    <div class="p-3 border rounded bg-light d-inline-block">
                        <h4 class="mb-1 font-weight-bold">رقم الفاتورة: <span class="text-danger">#@Model.Id</span></h4>
                        <p class="mb-0 text-muted">تاريخ الإصدار: @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>
                    </div>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-md-5">
                    <div class="info-box">
                        <h6 class="text-primary border-bottom pb-2 mb-3 font-weight-bold"><i class="fa fa-user"></i> معلومات العميل</h6>
                        <div class="info-item">
                            <span class="info-label">اسم العميل:</span>
                            <span class="info-value">@Model.Customer?.Name</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">رقم الهاتف:</span>
                            <span class="info-value">@Model.Customer?.Phone</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="info-box">
                        <h6 class="text-primary border-bottom pb-2 mb-3 font-weight-bold"><i class="fa fa-info-circle"></i> تفاصيل التنفيذ</h6>
                        <div class="row">
                            <div class="col-6">
                                <div class="info-item">
                                    <span class="info-label">الفني:</span>
                                    <span class="info-value text-info">@Model.Technician?.FullName</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">نوع العملية:</span>
                                    <span class="info-value">@(Model.Type.ToString() == "External" ? "خارجية" : "داخلية")</span>
                                </div>
                            </div>
                            <div class="col-6 text-left">
                                <span class="info-label d-block mb-2">حالة الفاتورة</span>
                                <span class="badge badge-success status-large">@Model.Status</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th style="width: 60px;">#</th>
                        <th class="text-right">الوصف (قطعة الغيار / الخدمة)</th>
                        <th>السعر</th>
                        <th>الكمية</th>
                        <th>الإجمالي</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 1; }
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@(count++)</td>
                            <td class="text-right font-weight-bold">@item.Description</td>
                            <td>@item.Price.ToString("N2")</td>
                            <td>@item.Quantity</td>
                            <td class="font-weight-bold">@((item.Price * item.Quantity).ToString("N2"))</td>
                        </tr>
                    }
                    @if (Model.ServicePrice > 0)
                    {
                        <tr class="service-row">
                            <td>@count</td>
                            <td class="text-right font-weight-bold">أجور اليد (المصنعية) - @Model.Name</td>
                            <td>@Model.ServicePrice.ToString("N2")</td>
                            <td>1</td>
                            <td>@Model.ServicePrice.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row mt-5">
                <div class="col-md-7">
                    <div class="p-4 border rounded bg-light">
                        <h6 class="font-weight-bold mb-2 text-muted uppercase small">الملاحظات الفنية:</h6>
                        <p class="mb-0 font-weight-bold" style="font-size: 1.1rem;">
                            @(string.IsNullOrEmpty(Model.Notes) ? "لا توجد ملاحظات." : Model.Notes)
                        </p>
                    </div>

                 @if (Model.HoldItems != null && Model.HoldItems.Any())
{
    <div class="hold-items-box mt-4">
        <h6 class="font-weight-bold text-dark mb-3">
            <i class="fa fa-archive"></i> الأمانات والقطع المحتجزة:
        </h6>
        @foreach (var hold in Model.HoldItems)
        {
            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                <div>
                    <i class="fa fa-caret-left text-primary"></i> 
                    <span class="font-weight-bold">@hold.ItemName</span>
                </div>
                
                <div class="d-flex align-items-center">
                    @if (!hold.IsDelivered)
                    {
                        <span class="badge badge-danger ml-2 p-2">تحت الحفظ</span>
                        <form asp-action="MarkAsDelivered" asp-controller="Maintenance" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="holdItemId" value="@hold.Id" />
                            <input type="hidden" name="maintenanceId" value="@Model.Id" />
                            <button type="submit" class="btn btn-sm btn-success shadow-sm">
                                <i class="fa fa-check"></i> تم تسليمها الآن
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="badge badge-success p-2">
                            <i class="fa fa-check-double"></i> تم التسليم للعميل
                        </span>
                    }
                </div>
            </div>
        }
    </div>
}
                </div>
                
                <div class="col-md-5">
                    <div class="total-card shadow">
                        <h5 class="mb-0">المبلغ الإجمالي النهائي</h5>
                        <h2>@((totalParts + Model.ServicePrice).ToString("N2")) <small>ج.م</small></h2>
                        <hr style="border-top: 1px solid rgba(255,255,255,0.2)">
                        <div class="d-flex justify-content-between px-3" style="font-size: 0.9rem; opacity: 0.9;">
                            <span>قطع الغيار: @totalParts.ToString("N2")</span>
                            <span>المصنعية: @Model.ServicePrice.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white d-none d-print-block pt-5 border-0">
            <div class="row text-center">
                <div class="col-4"><div class="border-top pt-2 font-weight-bold">توقيع العميل</div></div>
                <div class="col-4"><div class="border-top pt-2 font-weight-bold">المحاسب</div></div>
                <div class="col-4"><div class="border-top pt-2 font-weight-bold">ختم المركز</div></div>
            </div>
        </div>
    </div>
</div>

