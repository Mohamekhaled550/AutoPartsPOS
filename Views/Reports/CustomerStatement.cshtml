@{
    var customer = ViewBag.Customer;
    var invoices = ViewBag.Invoices as IEnumerable<dynamic>;
    var collections = ViewBag.Collections as IEnumerable<dynamic>;
}

<style>
    /* الإعدادات العامة للهوية البصرية */
    .statement-container {
        direction: rtl;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

    /* رأس الصفحة الاحترافي */
    .statement-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        border-bottom: 2px solid #f1f5f9;
        padding-bottom: 20px;
        margin-bottom: 30px;
    }

    .customer-brand h2 {
        color: #1e293b;
        font-weight: 800;
        margin-bottom: 5px;
    }

    .customer-info-box {
        background-color: #f8fafc;
        padding: 15px 25px;
        border-radius: 12px;
        border-right: 4px solid #3b82f6;
    }

    /* كروت الملخص المالي */
    .kpi-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .kpi-card {
        padding: 20px;
        border-radius: 12px;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .kpi-card h6 {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 10px;
    }

    .kpi-card h4 {
        font-size: 1.6rem;
        font-weight: 800;
        margin: 0;
    }

    .bg-invoices { background: linear-gradient(135deg, #1e293b 0%, #334155 100%); }
    .bg-collections { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
    .bg-balance { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }

    /* تنسيق الجداول */
    .section-title {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #1e293b;
        font-weight: 700;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #e2e8f0;
    }

    .modern-table-wrapper {
        background: white;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
        margin-bottom: 30px;
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
    }

    .modern-table thead {
        background-color: #f8fafc;
    }

    .modern-table th {
        padding: 12px 15px;
        text-align: right;
        font-size: 0.85rem;
        color: #64748b;
        text-transform: uppercase;
    }

    .modern-table td {
        padding: 12px 15px;
        border-top: 1px solid #f1f5f9;
        font-size: 0.95rem;
        color: #334155;
    }

    /* حالات الديون */
    .text-danger-custom { color: #ef4444; font-weight: 700; }
    .text-success-custom { color: #10b981; font-weight: 700; }

    .status-badge {
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 700;
    }

    .badge-unpaid { background-color: #fee2e2; color: #991b1b; }
    .badge-paid { background-color: #dcfce7; color: #166534; }

    /* وضع الطباعة */
    @@media print {
        body { background: white; }
        .statement-container { box-shadow: none; border: none; padding: 0; }
        .btn-print { display: none; }
    }

    .btn-print {
        background-color: #f1f5f9;
        border: 1px solid #e2e8f0;
        padding: 8px 20px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: 0.3s;
    }

    .btn-print:hover { background-color: #e2e8f0; }
</style>

<div class="statement-container">
    <div class="statement-header">
        <div class="customer-brand">
            <h2>كشف حساب تفصيلي</h2>
            <div class="customer-info-box">
                <div style="font-weight: 800; font-size: 1.2rem;">@customer.Name</div>
                <div style="color: #64748b;"><i class="fas fa-phone-alt"></i> @customer.Phone</div>
            </div>
        </div>
        <div class="text-start">
            <button class="btn-print" onclick="window.print()">
                <i class="fas fa-print"></i> طباعة الكشف
            </button>
            <div style="margin-top: 10px; color: #94a3b8; font-size: 0.8rem;">
                تاريخ الاستخراج: @DateTime.Now.ToString("yyyy-MM-dd")
            </div>
        </div>
    </div>

    <div class="kpi-row">
        <div class="kpi-card bg-invoices">
            <h6>إجمالي المديونية (الفواتير)</h6>
            <h4>@ViewBag.TotalInvoices.ToString("N2") <small style="font-size: 0.8rem;">ج.م</small></h4>
            <i class="fas fa-file-invoice-dollar" style="position:absolute; left: -10px; bottom: -10px; font-size: 4rem; opacity: 0.1;"></i>
        </div>

        <div class="kpi-card bg-collections">
            <h6>إجمالي المدفوعات</h6>
            <h4>@ViewBag.TotalCollections.ToString("N2") <small style="font-size: 0.8rem;">ج.م</small></h4>
            <i class="fas fa-hand-holding-usd" style="position:absolute; left: -10px; bottom: -10px; font-size: 4rem; opacity: 0.1;"></i>
        </div>

        <div class="kpi-card bg-balance">
            <h6>الرصيد النهائي المستحق</h6>
            <h4>@ViewBag.FinalBalance.ToString("N2") <small style="font-size: 0.8rem;">ج.م</small></h4>
            <i class="fas fa-scale-balanced" style="position:absolute; left: -10px; bottom: -10px; font-size: 4rem; opacity: 0.1;"></i>
        </div>
    </div>

    <h4 class="section-title"><i class="fas fa-receipt text-primary"></i> تفاصيل الفواتير الصادرة</h4>
    <div class="modern-table-wrapper">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>رقم الفاتورة</th>
                    <th>تاريخ الصدور</th>
                    <th>إجمالي الفاتورة</th>
                    <th>المبلغ المدفوع</th>
                    <th>المبلغ المتبقي</th>
                    <th>الحالة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in invoices)
                {
                    <tr>
                        <td class="fw-bold">#@i.Id</td>
                        <td class="text-muted">@i.InvoiceDate.ToString("yyyy-MM-dd")</td>
                        <td class="fw-bold">@i.Total.ToString("N2")</td>
                        <td class="text-success-custom">@i.Paid.ToString("N2")</td>
                        <td class="@(i.Remaining > 0 ? "text-danger-custom" : "")">@i.Remaining.ToString("N2")</td>
                        <td>
                            @if (i.Remaining > 0)
                            {
                                <span class="status-badge badge-unpaid">غير مسددة</span>
                            }
                            else
                            {
                                <span class="status-badge badge-paid">مسددة بالكامل</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h4 class="section-title mt-4"><i class="fas fa-money-bill-check text-success"></i> سجل سندات القبض (التحصيلات)</h4>
    <div class="modern-table-wrapper">
        <table class="modern-table">
            <thead>
                <tr style="background-color: #f0fdf4;">
                    <th>تاريخ التحصيل</th>
                    <th>المبلغ المحصل</th>
                    <th>مرتبط بفاتورة رقم</th>
                    <th>طريقة الدفع</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in collections)
                {
                    <tr>
                        <td><i class="far fa-calendar-check text-muted"></i> @c.TransDate.ToString("yyyy-MM-dd")</td>
                        <td class="fw-bold text-success-custom">@c.Amount.ToString("N2")</td>
                        <td>@(c.SalesInvoiceId != null ? "#" + c.SalesInvoiceId : "دفعة تحت الحساب")</td>
                        <td><span class="text-muted small">نقدي / تحويل</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />