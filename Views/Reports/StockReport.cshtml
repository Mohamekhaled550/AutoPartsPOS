@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "تقرير المخزون";
}

<style>
    /* الإعدادات العامة */
    .inventory-wrapper {
        direction: rtl;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8fafc;
        padding: 20px;
        border-radius: 15px;
    }

    .report-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .report-header h2 {
        font-weight: 800;
        color: #1e293b;
        margin: 0;
    }

    /* كروت الإحصائيات KPI */
    .stat-card {
        background: white;
        border: none;
        border-radius: 16px;
        padding: 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .stat-content h6 {
        color: #64748b;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .stat-content h3 {
        color: #1e293b;
        font-weight: 800;
        margin: 0;
    }

    /* ألوان الكروت الخاصة */
    .bg-blue-soft { background-color: #eff6ff; color: #3b82f6; }
    .bg-green-soft { background-color: #f0fdf4; color: #22c55e; }
    .bg-amber-soft { background-color: #fffbeb; color: #f59e0b; }

    /* تنسيق الجدول */
    .table-container {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        margin-top: 20px;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

    .custom-table thead {
        background-color: #f1f5f9;
    }

    .custom-table th {
        padding: 16px;
        text-align: right;
        font-weight: 700;
        color: #475569;
        font-size: 0.85rem;
        text-transform: uppercase;
        border-bottom: 1px solid #e2e8f0;
    }

    .custom-table td {
        padding: 16px;
        border-bottom: 1px solid #f1f5f9;
        color: #1e293b;
        font-size: 0.95rem;
        vertical-align: middle;
    }

    .custom-table tr:last-child td {
        border-bottom: none;
    }

    /* تمييز الصفوف المحذرة */
    .row-warning {
        background-color: #fff7ed !important;
    }

    .row-warning td {
        border-right: 4px solid #f97316;
    }

    /* البادج (Badges) */
    .badge-modern {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .badge-success-soft { background-color: #dcfce7; color: #166534; }
    .badge-danger-soft { background-color: #fee2e2; color: #991b1b; }

    /* أزرار الإجراءات */
    .btn-export {
        background-color: white;
        border: 1px solid #e2e8f0;
        padding: 8px 16px;
        border-radius: 10px;
        font-weight: 600;
        color: #475569;
        transition: all 0.2s;
    }

    .btn-export:hover {
        background-color: #f8fafc;
        border-color: #cbd5e1;
    }
</style>

<div class="inventory-wrapper">
    <div class="report-header">
        <h2><i class="fas fa-boxes text-primary"></i> تقرير حالة المخزون</h2>
        <button class="btn-export" onclick="window.print()">
            <i class="fas fa-print"></i> طباعة التقرير
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="stat-card">
                <div class="stat-content">
                    <h6>إجمالي الأصناف</h6>
                    <h3>@ViewBag.TotalItems</h3>
                </div>
                <div class="stat-icon bg-blue-soft">
                    <i class="fas fa-list"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="stat-card">
                <div class="stat-content">
                    <h6>إجمالي الكمية بالمخزن</h6>
                    <h3>@ViewBag.TotalQuantity</h3>
                </div>
                <div class="stat-icon bg-green-soft">
                    <i class="fas fa-warehouse"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="stat-card">
                <div class="stat-content">
                    <h6>أصناف تحت حد الطلب</h6>
                    <h3 style="color: #f59e0b;">@ViewBag.LowStockCount</h3>
                </div>
                <div class="stat-icon bg-amber-soft">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>اسم الصنف</th>
                    <th>فئة الصنف</th>
                    <th>الكمية الحالية</th>
                    <th>سعر البيع</th>
                    <th>الحالة التشغيلية</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr class="@(p.IsLowStock ? "row-warning" : "")">
                        <td class="fw-bold">@p.Name</td>
                        <td><span class="text-muted">@p.Type</span></td>
                        <td>
                            <span class="fw-bold @(p.IsLowStock ? "text-danger" : "")">@p.Quantity</span>
                        </td>
                        <td>@p.SellPrice.ToString("N0") <small>ج.م</small></td>
                        <td>
                            @if (p.IsLowStock)
                            {
                                <span class="badge-modern badge-danger-soft">
                                    <i class="fas fa-arrow-down"></i> نقص مخزون
                                </span>
                            }
                            else
                            {
                                <span class="badge-modern badge-success-soft">
                                    <i class="fas fa-check"></i> متوفر
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />