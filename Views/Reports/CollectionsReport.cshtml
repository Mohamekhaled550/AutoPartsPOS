@model AutoPartsPOS.Models.Reports.CollectionsReportVM

@{
    ViewData["Title"] = "تقرير التحصيلات";
}

<style>
    /* الإعدادات العامة للملف */
    .report-page {
        direction: rtl;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8fafc;
        padding: 20px;
        border-radius: 15px;
    }

    /* العنوان الرئيسي */
    .page-title {
        color: #1e293b;
        font-weight: 800;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* كارد الفلتر */
    .filter-section {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        align-items: flex-end;
    }

    .form-group-custom {
        display: flex;
        flex-direction: column;
        gap: 5px;
        flex: 1;
        min-width: 200px;
    }

    .form-group-custom label {
        font-size: 0.85rem;
        font-weight: 700;
        color: #64748b;
    }

    .form-group-custom .form-control {
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 8px 12px;
        transition: all 0.3s ease;
    }

    .form-group-custom .form-control:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .btn-filter {
        background-color: #3b82f6;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
        height: 42px;
    }

    .btn-filter:hover {
        background-color: #2563eb;
    }

    /* كارت الإحصائيات (Stat Card) */
    .stat-card {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        display: inline-flex;
        flex-direction: column;
        min-width: 250px;
        margin-bottom: 30px;
        box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.2);
    }

    .stat-card .label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .stat-card .value {
        font-size: 2rem;
        font-weight: 800;
    }

    /* الجدول الاحترافي */
    .table-container {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 0;
    }

    .custom-table thead {
        background-color: #f1f5f9;
    }

    .custom-table th {
        text-align: right;
        padding: 15px;
        color: #475569;
        font-weight: 700;
        font-size: 0.9rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .custom-table td {
        padding: 15px;
        color: #1e293b;
        border-bottom: 1px solid #f1f5f9;
        font-size: 0.95rem;
    }

    .custom-table tbody tr:hover {
        background-color: #f8fafc;
    }

    .amount-cell {
        font-weight: 700;
        color: #059669;
    }

    .badge-cash {
        background: #f1f5f9;
        color: #64748b;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 0.8rem;
    }

    /* التجاوب مع الموبايل */
    @@media (max-width: 768px) {
        .filter-form {
            flex-direction: column;
            align-items: stretch;
        }
        .btn-filter {
            width: 100%;
        }
    }
</style>

<div class="report-page">
    <h2 class="page-title">
        <i class="fas fa-file-invoice-dollar text-success"></i> تقرير التحصيلات المالية
    </h2>

    <div class="filter-section">
        <form method="get" class="filter-form">
            <div class="form-group-custom">
                <label>من تاريخ</label>
                <input type="date" name="fromDate" class="form-control" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group-custom">
                <label>إلى تاريخ</label>
                <input type="date" name="toDate" class="form-control" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
            </div>

            <div class="form-group-custom">
                <label>العميل</label>
                <select name="customerId" class="form-control">
                    <option value="">-- عرض جميع العملاء --</option>
                    @foreach(var c in Model.Customers)
                    {
                        <option value="@c.Id" selected="@(Model.SelectedCustomerId == c.Id)">
                            @c.Name
                        </option>
                    }
                </select>
            </div>

            <button type="submit" class="btn-filter">
                <i class="fas fa-filter"></i> تطبيق الفلتر
            </button>
        </form>
    </div>

    <div class="stat-card">
        <span class="label">إجمالي المبالغ المحصلة</span>
        <span class="value">@Model.TotalCollected.ToString("N2") <small style="font-size: 1rem;">ج.م</small></span>
    </div>

    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th width="50">#</th>
                    <th>التاريخ والوقت</th>
                    <th>العميل</th>
                    <th>المبلغ المحصل</th>
                    <th>ملاحظات</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Collections.Any())
                {
                    int i = 1;
                    foreach(var item in Model.Collections)
                    {
                        <tr>
                            <td><span class="text-muted">@i</span></td>
                            <td>
                                <div style="font-weight:600">@item.TransDate.ToString("yyyy-MM-dd")</div>
                                <small class="text-muted">@item.TransDate.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (item.Customer != null)
                                {
                                    <i class="fas fa-user-circle text-primary"></i> @item.Customer.Name
                                }
                                else
                                {
                                    <span class="badge-cash">نقدي (عام)</span>
                                }
                            </td>
                            <td class="amount-cell">@item.Amount.ToString("N2")</td>
                            <td><small class="text-muted italic">@(string.IsNullOrEmpty(item.Notes) ? "---" : item.Notes)</small></td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center" style="padding: 40px; color: #94a3b8;">
                            <i class="fas fa-folder-open" style="font-size: 2rem; display: block; margin-bottom: 10px;"></i>
                            لا توجد بيانات تحصيل مطابقة للبحث
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />